FROM python:3.11-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential libmagic1 curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Build context is ./services/api, so these are relative to THIS folder:
COPY requirements.txt ./requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copy the FastAPI app code from this context into the image
COPY . /app/app

ENV PYTHONUNBUFFERED=1

# Data dirs for notebooks & assets (mounted as volumes by compose)
RUN mkdir -p /data/notebooks /data/assets
VOLUME ["/data/notebooks", "/data/assets"]

EXPOSE 8080

